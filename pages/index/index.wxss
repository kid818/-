/* 活动名称 */
.info{
  height: 180rpx;
  padding: 16rpx 130rpx 30rpx 30rpx;
  /* background-color: pink; */
  position: relative;
  box-sizing: border-box;
}
.info .name{
  font-size: 30rpx;
  color: #3c3c3c;
}
.info .extra{
  font-size: 22rpx;
  color: #B4B4B4;
  position: absolute;
  bottom: 20rpx;
}
.info .extra text {
  margin-right: 60rpx;
}
.info .status{
  position: absolute;
  right: 30rpx;
  top:16rpx;
  font-size: 30rpx;
  color: #FE6249;
}